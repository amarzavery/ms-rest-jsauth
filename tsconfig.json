{
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "newLine": "LF",
        "target": "es2016",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist/lib",
        "declaration": true,
        "declarationDir": "./typings",
        "allowJs": false,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "lib/**/*.ts",
        "test/**/*.ts"
    ]
}
